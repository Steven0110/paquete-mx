.card-wrapper
form(name="card.form", novalidate, data-ng-submit="card.send()")
  div(layout-xs-sm="row")
    md-input-container.md-block
      label(for="cardName",data-ng-bind="card.labels.form.name")
      input(name="cardName", data-ng-model="card.info.name", required)
      div(ng-messages="card.form.cardName.$error")
        div(ng-message="required")
          |Es requerido
      md-icon
        div(data-balloon-length="medium" data-balloon="Nombre completo del tarjetahabiente" data-balloon-pos="right")
          i.fa.fa-info-circle
    md-input-container.md-block
      label(for="cardNumber",data-ng-bind="card.labels.form.number")
      input(name="cardNumber", data-ng-model="card.info.card_number", required)
      div(ng-messages="card.form.cardNumber.$error")
        div(ng-message="validateCard")
          |Número de tarjeta invalido.
      md-icon
        div(data-balloon-length="medium" data-balloon="Número completo que aparece en la tarjeta" data-balloon-pos="right")
          i.fa.fa-info-circle
    md-input-container.md-block
      label(for="cvc",data-ng-bind="card.labels.form.cvc")
      input(name="cvc", data-ng-model="card.info.cvc",required)
      div(ng-messages="card.form.cvc.$error")
        div(ng-message="validateCvc")
          |Código de seguridad invalido.
      md-icon
        div(data-balloon-length="medium" data-balloon="Número que se encuentra en la parte posterior de tu tarjeta, son 3 dígitos en caso de VISA y MASTERCARD. Para AMEX se encuentra en el frente y son 4 digitos" data-balloon-pos="right")
          i.fa.fa-info-circle
    div
      .row
        .col-xs-12.col-sm-5
          md-input-container.md-block
            label(data-ng-bind="card.labels.form.expirationMonth")
            md-select(name="month", data-ng-model="card.info.exp_month")
              md-option(data-ng-repeat="item in card.months", value="{{item}}")
                |{{item}}
        .col-xs-2
        .col-xs-12.col-sm-5
          md-input-container.md-block
            label(data-ng-bind="card.labels.form.expirationYear")
            md-select(name="month", data-ng-model="card.info.exp_year")
              md-option(data-ng-repeat="item in card.years", value="{{item}}")
                |{{item}}
    md-input-container.md-block
      label(for="address_line_1",data-ng-bind="card.labels.form.address_line_1")
      input(name="address_line_1", data-ng-model="card.info.address_line_1",required)
      div(ng-messages="card.form.address_line_1.$error")
        div(ng-message="required")
          |Es requerido
      md-icon
        div(data-balloon-length="medium" data-balloon="Ingresar la Calle y Número de la dirección declarada en la tarjeta." data-balloon-pos="right")
          i.fa.fa-info-circle
    md-input-container.md-block
      label(for="address_line_2",data-ng-bind="card.labels.form.address_line_2")
      input(name="address_line_2", data-ng-model="card.info.address_line_2",required)
      div(ng-messages="card.form.address_line_2.$error")
        div(ng-message="required")
          |Es requerido
      md-icon
        div(data-balloon-length="medium" data-balloon="Colonia de la dirección declarada en la tarjeta." data-balloon-pos="right")
          i.fa.fa-info-circle
    md-input-container.md-block
      label(for="city",data-ng-bind="card.labels.form.city")
      input(name="city", data-ng-model="card.info.city",required)
      div(ng-messages="card.form.city.$error")
        div(ng-message="required")
          |Es requerido
      md-icon
        div(data-balloon-length="medium" data-balloon="Ciudad de la dirección declarada en la tarjeta." data-balloon-pos="right")
          i.fa.fa-info-circle
    md-input-container.md-block
      label(for="state",data-ng-bind="card.labels.form.state")
      input(name="state", data-ng-model="card.info.state",required)
      div(ng-messages="card.form.state.$error")
        div(ng-message="required")
          |Es requerido
      md-icon
        div(data-balloon-length="medium" data-balloon="Estado de la dirección declarada en la tarjeta." data-balloon-pos="right")
          i.fa.fa-info-circle
    md-input-container.md-block
      label(for="postal_code",data-ng-bind="card.labels.form.postal_code")
      input(name="postal_code", data-ng-model="card.info.postal_code",required)
      div(ng-messages="card.form.postal_code.$error")
        div(ng-message="required")
          |Es requerido
      md-icon
        div(data-balloon-length="medium" data-balloon="Código postal de la dirección declarada en la tarjeta." data-balloon-pos="right")
          i.fa.fa-info-circle
    .align-center.margin-top-2
      md-button.md-raised.md-primary(type="submit", data-ng-bind="card.labels.form.save", aria-label="card.labels.form.save")
      md-button.md-raised( data-ng-bind="card.labels.form.cancel", aria-label="card.labels.form.cancel", data-ng-click="card.cancel()")