div(layout-xs-sm="row")
  md-input-container.md-block
    label(for="cardName",data-ng-bind="card.labels.form.name")
    input(name="cardName", data-ng-model="card.data.name", required)
    div(ng-messages="formName.cardName.$error")
      div(ng-message="required")
        |Es requerido
  md-input-container.md-block
    label(for="cardNumber",data-ng-bind="card.labels.form.number")
    input(name="cardNumber", data-ng-model="card.data.number", validate-card)
    div(ng-messages="formName.cardNumber.$error")
      div(ng-message="required")
        |Es requerido
  .row-content
    .container-fluid.big-icon
      .row.align-center
        .col-xs-4
          i.icon.fa.fa-cc-visa(data-ng-class="{'active': brand =='visa'}")
        .col-xs-4
          i.icon.fa.fa-cc-mastercard(data-ng-class="{'active': brand =='mastercard'}")
        .col-xs-4
          i.icon.fa.fa-cc-amex(data-ng-class="{'active': brand =='amex'}")
  md-input-container.md-block
    label(for="cvc",data-ng-bind="card.labels.form.cvc")
    input(name="cvc", data-ng-model="card.data.cvc", validate-cvc)
    div(ng-messages="formName.cvc.$error")
      div(ng-message="required", data-ng-bind="card.labels.form.erros.required")
  div
    .row
      .col-xs-12.col-sm-5
        md-input-container.md-block
          label(data-ng-bind="card.labels.form.expirationMonth")
          md-select(name="month", data-ng-model="card.data.expMonth")
            md-option(data-ng-repeat="item in card.months", value="{{item}}")
              |{{item}}
      .col-xs-2
      .col-xs-12.col-sm-5
        md-input-container.md-block
          label(data-ng-bind="card.labels.form.expirationYear")
          md-select(name="month", data-ng-model="card.data.expYear")
            md-option(data-ng-repeat="item in card.years", value="{{item}}")
              |{{item}}