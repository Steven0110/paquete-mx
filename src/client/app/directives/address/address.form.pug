    md-input-container.md-block
      label(for="state",data-ng-bind="shell.labels.address.form.state")
      input(name="state", data-ng-model="newAddress.state", required="")
      div(ng-messages="addressForm.state.$error")
        div(ng-message="required",data-ng-bind="shell.labels.form.errors.required")
