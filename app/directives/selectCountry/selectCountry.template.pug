.country-container
  .country-data(data-ng-click="vm.showCountries()")
    span.country-name
      span.flag-icon(class="flag-icon-{{vm.country.code}}")
      |{{vm.country.code}}
      i.fa.fa-angle-down
  .select-box(data-ng-show="vm.show")
    ul
      li.select-item
        input.country-search(data-ng-model="vm.search", placeholder="Buscar Pa√≠s")
      li.select-item.country-option(data-ng-repeat="item in vm.list | filter:vm.search", data-ng-click="vm.selectItem(item)")
        span.country-name
          span.flag-icon(class="flag-icon-{{item.code}}")
          |{{item.name}}