md-content(layout-padding)
  form(name="loginForm", novalidate, data-ng-submit="login()")
    div(layout-xs-sm="row")
      md-input-container.md-block
        label(for="username", data-ng-bind="shell.labels.login.form.email")
        input(name="username", type="email", data-ng-model="user.username", required="", autofocus)
        div(ng-messages="loginForm.username.$error")
          div(ng-message="required", data-ng-bind="shell.labels.form.errors.required")
          div(ng-message="email", data-ng-bind="shell.labels.login.form.errors.email")
      md-input-container.md-block
        label(for="password", data-ng-bind="shell.labels.login.form.password")
        input(name="password", type="password", data-ng-model="user.password", required="")
        div(ng-messages="loginForm.password.$error")
          div(ng-message="required", data-ng-bind="shell.labels.form.errors.required")
    .align-center
      md-button.md-raised.md-primary(type="submit",data-ng-bind="shell.labels.login.form.login",aria-label="shell.labels.login.form.login")
    .align-center
      a.action(data-ui-sref="forgot", data-ng-bind="shell.labels.login.form.forgot")    
    .error.align-center(data-ng-show="response.login",data-ng-bind="shell.labels.login_errors[response.code]")